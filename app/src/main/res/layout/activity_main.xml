<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <Button
            android:text="@string/linear_horizontal_layout_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_linear_horizontal_layout_activity_button" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/show_relative_layout_activity_button"
            app:layout_constraintVertical_chainStyle="spread"/>
    <Button
            android:text="@string/relative_layout_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_relative_layout_activity_button" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@id/show_linear_horizontal_layout_activity_button"
            app:layout_constraintBottom_toBottomOf="@id/show_linear_vertical_layout_activity_button"
            app:layout_constraintVertical_chainStyle="spread"/>
    <Button
            android:text="@string/linear_vertical_layout_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_linear_vertical_layout_activity_button" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@id/show_relative_layout_activity_button"
            app:layout_constraintBottom_toBottomOf="@id/show_constraint_layout_activity_button"
            app:layout_constraintVertical_chainStyle="spread"/>
    <Button
            android:text="@string/constraint_layout_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_constraint_layout_activity_button" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@id/show_linear_vertical_layout_activity_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="spread"/>
</android.support.constraint.ConstraintLayout>
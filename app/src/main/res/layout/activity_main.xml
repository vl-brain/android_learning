<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/button_start_service_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_service_button" android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/button_stop_service_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_service_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/start_service_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/show_service_output_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/button_show_service_output_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_service_output_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/start_service_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.337"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>